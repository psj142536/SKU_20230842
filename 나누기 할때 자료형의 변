#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
int main(void)
{
	int i;
	double f;
	f = 5 / 4;   //소숫점 자리 아래는 버림
	printf("%f\n", f);
	f = (double)5 / 4;   // 실수형으로 저장
	printf("%f\n", f);
	f = 5.0 / 4;    // 실수형으로 저장
	printf("%f\n", f);
	f = (double)5 / (double)4; //실수형으로 저장
	printf("%f\n", f);
	i = 1.3 + 1.8;   //더한뒤 정수만
	printf("%d\n", i);
	i = (int)1.3 + (int)1.8;  //1+1
	printf("%d\n", i);
	return 0;
}
